extends ../layout

block content
    .navbar.navbar-inverse
        .container
            .navbar-collapse.collapse
                ul.navbar-nav.nav
                    li
                        a(href="/users/#{user._id}") My profile
    .container
        .col-lg-4
            .panel.panel-default
                .panel-heading
                    h1.panel-title #{sketch.title}
                p.panel-body #{sketch.description}
                h6.panel-footer Created at: #{sketch.createdAt}
            .col-lg-12
                a(href='/sketches/#{sketch._id}/download')
                    button.btn.btn-primary Download #{sketch.sketchName}
            .col-lg-12
                a(href='/sketches/#{sketch._id}/edit')
                    button.btn.btn-warning Edit This Sketch
        .col-lg-4
            .col-lg-12
                img.img-thumbnail(src='/QRCodes/#{sketch._id}.png')
            .col-lg-6
                a(href='/QRCodes/#{sketch._id}/download')
                    button.btn.btn-primary Download QRCode
//    div#contentWrap
        div#chatWrap
            div#chat
                form#send-message
                    div Name
                    input#name
                    div Value
                    input#value
                    div
                    input(type="submit")
                    input#room(type="hidden", value="#{sketch._id}")
        div#users
    script(src="https://code.jquery.com/jquery-1.10.2.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="/javascripts/chat.js")
    script(src="/javascripts/jquery.printElement.min.js")
    script(src="/javascripts/printElement.js")