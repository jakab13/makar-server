extends ../layout

block headerContent
    link(rel='stylesheet', href='/stylesheets/sketch/new.css')

block content
    .container.col-lg-6#new-form
        form.form-horizontal(action='/sketches/submit', method='post', enctype='multipart/form-data', role="form")
            .form-group
                label.control-label.col-sm-4 Title
                .col-sm-8
                    input.form-control(type='text', name='title', placeholder='', focus="")
            .form-group
                label.control-label.col-sm-4 Description
                .col-sm-8
                    textarea.form-control(name='description', rows="10")
            .form-group
                label.control-label.col-sm-4 File
                .col-sm-8
                    input(type='file', name='sketch')
            .form-group
                .col-sm-offset-4.col-sm-8
                    input.btn.btn-primary.btn-block(type='submit', value='Save sketch')

